[
  {
    "name" : "FullAccessOnMyResource",
    "statements" : [
      {
        "effect" : "allow",
        "when" : "onReceive",
        "resources" : [
          {
            "pattern" : "/paperwork-service/:owner/*",
            "actions" : [
              "POST", "DELETE", "PUT", "GET"
            ],
            "conditions" : [
              {
                "fn::equal" : [
                  {
                    "path" : "uid",
                    "in" : "jwtToken"
                  },
                  {
                    "path" : "params.owner",
                    "in" : "request"
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "effect" : "allow",
        "when" : "onReceive",
        "resources" : [
          {
            "pattern" : "/paperwork-service/papers/*",
            "actions" : [
              "GET"
            ],
            "conditions" : []
          }
        ]
      },
      {
        "effect" : "allow",
        "when" : "onReceive",
        "resources" : [
          {
            "pattern" : "/paperwork-service/papers/*/commits/*",
            "actions" : [
              "POST"
            ],
            "conditions" : []
          }
        ]
      },
      {
        "effect" : "allow",
        "when" : "onReceive",
        "resources" : [
          {
            "pattern" : "/paperwork-service/layout/*",
            "actions" : [
              "GET"
            ],
            "conditions" : []
          }
        ]
      },
      {
        "effect" : "allow",
        "when" : "onReceive",
        "resources" : [
          {
            "pattern" : "/paperwork-service/papers/*/aggregations",
            "actions" : [
              "POST"
            ],
            "conditions" : []
          }
        ]
      }
    ]
  }
]
